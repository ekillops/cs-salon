@{
  Layout = "Shared/_Layout.cshtml";
  var stylist = Model.GetStylist();
}
<br>
<h3>@Model.GetName()</h3>
<br>
<p>Phone Number:</p>
<p>@Model.GetPhoneNumber()</p>
<br>
<h4>Stylist:</h4>
<p><a href="/stylists/@stylist.GetId()">@stylist.GetName()</a></p>
<br>
<br>

<a href="/clients/@Model.GetId()/update" class="btn btn-default btn-md">Edit</a>
<form class="form-inline" action="/clients" method="post">
  <input type="hidden" name="_method" value="DELETE">
  <input type="hidden" name="client-id" value="@Model.GetId()">
  <button class="btn btn-default btn-md">Delete</button>
</form>
