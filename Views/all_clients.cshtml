@{
  Layout = "Shared/_Layout.cshtml";
}
<br>
<h3>ALL CLIENTS</h3>
@if (Model.Count != 0)
{
  @foreach (var client in Model)
  {
    @{ var stylist = client.GetStylist(); }
    <br>
    <h4>@client.GetName()</h4>
    <p>Phone Number: @client.GetPhoneNumber()</p>
    <br>
    <h5>Stylist:</h5>
    <p><a href="/stylists/@stylist.GetId()">@stylist.GetName()</a></p>

  }
}
else
{
  <p>There are no clients to display.</p>
}
<br>
<a href="/clients/new" class="btn btn-default btn-md">Add New</a>
<form class="form-inline" action="/clients/clear" method="post">
  <input type="hidden" name="_method" value="DELETE">
  <button class="btn btn-default btn-md">Delete All</button>
</form>
