@{
  Layout = "Shared/_Layout.cshtml";
}
<h3>ALL STYLISTS</h3>
@if (Model.Count != 0)
{
  @foreach (var stylist in Model)
  {
    <br>
    <h4>@stylist.GetName()</h4>
    <p>Phone Number: @stylist.GetPhoneNumber()</p>
    <p><a href="/stylists/@stylist.GetId()"><small>View stylist page</small></a></p>
  }
}
else
{
  <p>There are no stylists to display.</p>
}
<br>
<a href="/stylists/new" class="btn btn-default btn-md" role="button">Add New</a>
<form class="form-inline" action="/stylists/clear" method="post">
  <input type="hidden" name="_method" value="DELETE">
  <button class="btn btn-default btn-md">Delete All</button>
</form>
