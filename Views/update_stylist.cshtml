@{
  Layout = "Shared/_Layout.cshtml";
}
<h3>EDIT STYLIST</h3>
<br>
<form action="/stylists" method="post">
  <input type="hidden" name="_method" value="PATCH">
  <input type="hidden" name="stylist-id" value="@Model.GetId()">
  <label>Stylist Details</label>
  <input class="form-control" type="text" name="stylist-name" value="@Model.GetName()" required>
  <input class="form-control" type="text" name="stylist-phone-number" value="@Model.GetPhoneNumber()" required>
  <br>
  <button type="submit" class="btn btn-default btn-md">Update</button>
</form>
